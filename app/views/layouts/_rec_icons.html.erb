<% case current_user_likes[rec.info.medium_id] %>
	<% when 1 %>
		<ul class="icons">
			<li class="icons current_icon">
				<%= image_tag 'green_circle.svg' %>
				<ul class="icon_slider">
					<li class="icons"><%= link_to image_tag('white_circle'), {action: 'destroy', controller: 'likes', user: user.id, like: rec.info.medium_id, is_recommendation: true}, :method => :post %></li>
					<li class="icons"><%= link_to image_tag('yellow_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 0, is_recommendation: true}, :method => :post %></li>
					<li class="icons"><%= link_to image_tag('red_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: -1, is_recommendation: true}, :method => :post %></li>
				</ul>
				<%= image_tag 'blue_r.jpg' %>
			</li>
		</ul>
	<% when 0 %>
		<ul class="icons">
			<li class="icons current_icon">
				<%= image_tag 'yellow_circle.png' %>
				<ul class="icon_slider">
					<li class="icons"><%= link_to image_tag('white_circle'), {action: 'destroy', controller: 'likes', user: user.id, like: rec.info.medium_id, is_recommendation: true}, :method => :post %></li>
					<li class="icons"><%= link_to image_tag('green_circle.svg'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 1, is_recommendation: true}, :method => :post %></li>
					<li class="icons"><%= link_to image_tag('red_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: -1, is_recommendation: true}, :method => :post %></li>
				</ul>
				<%= image_tag 'blue_r.jpg' %>
			</li>
		</ul>
	<% when -1 %>
		<ul class="icons">
			<li class="icons current_icon">
				<%= image_tag 'red_circle.png' %>
				<ul class="icon_slider">
					<li class="icons"><%= link_to image_tag('white_circle'), {action: 'destroy', controller: 'likes', user: user.id, like: rec.info.medium_id, is_recommendation: true}, :method => :post %></li>
					<li class="icons"><%= link_to image_tag('green_circle.svg'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 1, is_recommendation: true}, :method => :post %></li>
					<li class="icons"><%= link_to image_tag('yellow_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 0, is_recommendation: true}, :method => :post %></li>
				</ul>
				<%= image_tag 'blue_r.jpg' %>
			</li>
		</ul>
	<% else %>
		<ul class="icons-wrapper">
			<li class="icons current_icon">
				<%= image_tag 'white_circle.jpeg' %>
				<ul class="icon_slider">
					<li class="icons"><%= link_to image_tag('green_circle.svg'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 1, is_recommendation: true}, :method => :post %></li>
					<li class="icons"><%= link_to image_tag('yellow_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 0, is_recommendation: true}, :method => :post %></li>
					<li class="icons"><%= link_to image_tag('red_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: -1, is_recommendation: true}, :method => :post %></li>
				</ul>
				<%= image_tag 'blue_r.jpg' %>
			</li>
			<li>
				<ul>
					<% if user.id != current_user.id %>
						<% if rec.rec_by_user?(current_user.id) %>
							<li class="icons"><%= link_to image_tag('blue_arrow.png'), {action: 'destroy', controller: 'recommendations', receiver: user.id, sender: current_user.id, medium_id: rec.info.medium_id, is_recommendation: true}, :method => :post %></li>
						<% else %>
							<li class="icons"><%= link_to image_tag('white_arrow.jpg'), {action: 'create', controller: 'recommendations', receiver: user.id, sender: current_user.id, medium_id: rec.info.medium_id, is_recommendation: true}, :method => :post %></li>
						<% end %>
					<% end %>
				</ul>
			</li>
		</ul>
<% end %>