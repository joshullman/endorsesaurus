<% case current_user_likes[rec.info.medium_id] %>
	<% when 1 %>
		<ul class="icons_wrapper">
			<li class="dropdown_icon icon_element">
				<%= image_tag 'green_circle.svg', class: "iconbtn icons" %>
				<div class="icon_slider">
					<%= link_to image_tag('yellow_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 0, is_recommendation: true}, :method => :post, class: "icons" %>
					<%= link_to image_tag('red_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: -1, is_recommendation: true}, :method => :post, class: "icons" %>
				</div>
				<li class="icon_element"><%= link_to image_tag('blue_r.jpg'), {action: 'new', controller: 'recommendations', medium_id: rec.info.medium_id}, :method => :get, class: "icons" %>
				</li>
			</li>
		</ul>
	<% when 0 %>
		<ul class="icons_wrapper">
			<li class="dropdown_icon icon_element">
				<%= image_tag 'yellow_circle.png', class: "iconbtn icons" %>
				<div class="icon_slider">
					<%= link_to image_tag('green_circle.svg'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 1, is_recommendation: true}, :method => :post, class: "icons" %>
					<%= link_to image_tag('red_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: -1, is_recommendation: true}, :method => :post, class: "icons" %>
				</div>
				<li class="icon_element"><%= link_to image_tag('blue_r.jpg'), {action: 'new', controller: 'recommendations', medium_id: rec.info.medium_id}, :method => :get, class: "icons" %>
				</li>
			</li>
		</ul>
	<% when -1 %>
		<ul class="icons_wrapper">
			<li class="dropdown_icon icon_element">
				<%= image_tag 'red_circle.png', class: "iconbtn icons" %>
				<div class="icon_slider">
					<%= link_to image_tag('green_circle.svg'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 1, is_recommendation: true}, :method => :post, class: "icons" %>
					<%= link_to image_tag('yellow_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 0, is_recommendation: true}, :method => :post, class: "icons" %>
				</div>
				<li class="icon_element"><%= link_to image_tag('blue_r.jpg'), {action: 'new', controller: 'recommendations', medium_id: rec.info.medium_id}, :method => :get, class: "icons" %>
				</li>
			</li>
		</ul>
	<% else %>
		<ul class="icons_wrapper">
			<li class="dropdown_icon icon_element">
				<%= image_tag 'white_circle.png', class: "iconbtn icons" %>
				<div class="icon_slider">
					<%= link_to image_tag('green_circle.svg'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 1, is_recommendation: true}, :method => :post, class: "icons" %>
					<%= link_to image_tag('yellow_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: 0, is_recommendation: true}, :method => :post, class: "icons" %>
					<%= link_to image_tag('red_circle.png'), {action: 'create', controller: 'likes', user: user.id, like: rec.info.medium_id, value: -1, is_recommendation: true}, :method => :post, class: "icons" %>
				</div>
				<li class="icon_element"><%= link_to image_tag('blue_r.jpg'), {action: 'new', controller: 'recommendations', medium_id: rec.info.medium_id}, :method => :get, class: "icons" %>
				</li>
			</li>
		</ul>
<% end %>