<% if note.media_type == "Movie" %>
	<div class="event_information">
		<div class="user_icon">
			<%= link_to image_tag('profile.jpg'), user_path(user), class: "photo_icon" %>
		</div>
		<div class="event_info">
			<% case note.value%>
				<% when 1%>
					<%= link_to user.name, user_path(user) %> liked <%= link_to note.media.title, movie_path(note.media) %>
				<% when 0 %>
					<%= link_to user.name, user_path(user) %> saw <%= link_to note.media.title, movie_path(note.media) %>
				<% when -1%>
					<%= link_to user.name, user_path(user) %> disliked <%= link_to note.media.title, movie_path(note.media) %>
			<% end %>
			<br>
			<%= note.created_at.strftime("%d %b. %Y") %>
		</div> 
	</div> 
