<div id=<%="#{placeholder[0].id}"%> class=<%="#{css_class}_row"%>
	<%if user_likes[placeholder[0].medium_id] == 1 %>
		style="background-color:green;"
	<% elsif user_likes[placeholder[0].medium_id] == -1 %>
		style="background-color:red;"
	<% elsif user_likes[placeholder[0].medium_id] == 0 %>
		style="background-color:yellow;"
	<% end %>	>
	<%= link_to placeholder[0].title, show_path(placeholder[0]) %>
	<%= render partial: 'layouts/icons', locals: { user: user, current_user_likes: current_user_likes, placeholder: placeholder[0], current_user: current_user } %>
	<br>
	<% placeholder[1].each do |season| %>
		<%= render partial: 'layouts/season_layout', locals: { recently_watched: recently_watched, user: user, user_likes: user_likes, current_user_likes: current_user_likes, placeholder: season, current_user: current_user, css_class: css_class } %>				
	<% end %>
</div>