<% if note.media_type == "Movie" %>
	<div class="event_information">
	<div class="created_at"><%= note.created_at.strftime("%d %b. %Y") %></div>
		<div class="user_icon">
			<%= link_to image_tag('profile.jpg'), user_path(user), class: "event_photo_icon" %>
		</div>
		<div class="event_info">
			<% case note.value%>
				<% when 1%>
					<%= link_to note.receivers.first.name, user_path(note.receivers.first) %> liked <%= link_to note.media.title, movie_path(note.media) %> and 
					<% note.senders.each do |sender| %>
						<%= link_to sender.name, user_path(sender) %>
					<% end %>
					gained <%= note.points %> points
				<% when 0 %>
					<%= link_to note.receivers.first.name, user_path(note.receivers.first) %> saw <%= link_to note.media.title, movie_path(note.media) %> and 
					<% note.senders.each do |sender| %>
						<%= link_to sender.name, user_path(sender) %>
					<% end %>
					gained 0 points
				<% when -1%>
					<%= link_to note.receivers.first.name, user_path(note.receivers.first) %> disliked <%= link_to note.media.title, movie_path(note.media) %> and 
					<% note.senders.each do |sender| %>
						<%= link_to sender.name, user_path(sender) %>
					<% end %>
					lost <%= note.points %> points
			<% end %>
		</div> 
	</div> 
