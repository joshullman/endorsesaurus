<div id=<%="#{rec.info.id}"%> class=<%="recommendation_row_show"%>>
	Recommendation Points: <%= rec.user_points %>
	<br>
	Media Points: <%= rec.info.points %>
	<br>
	Title: <%= link_to rec.info.title, show_path(rec.info) %>
	<br>
	Recommended By:
	<br>
	<% rec.rec_by.each do |recommender| %>
		<%= link_to recommender.name, recommender %>
		<br>
	<% end %>
	<br>
	<%= render partial: 'layouts/rec_icons', locals: { user: user, current_user_likes: current_user_likes, rec: rec, current_user: current_user } %>
	<br>
</div>