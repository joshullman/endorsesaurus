<% if note.media_type == "Movie" %>
	<div class="event_information">
		<div class="created_at"><%= note.created_at.strftime("%d %b. %Y") %></div>
		<div class="user_icon">
			<%= link_to image_tag("#{user.photo_url}"), user_path(user), class: "event_photo_icon" %>
		</div>
		<div class="event_info">
			<% note.senders.each do |sender| %>
				<%= link_to sender.name, user_path(sender) %>
			<% end %>
			recommended <%= link_to note.media.title, movie_path(note.media) %> to 
			<% note.receivers.each do |receiver| %>
				<%= link_to receiver.name, user_path(receiver) %>
			<% end %>
			<br>
		</div> 
	</div> 
