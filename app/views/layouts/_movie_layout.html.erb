<div id=<%="#{placeholder.id}"%> class="likes_row_movie"
	<%if user_likes[placeholder.medium_id] == 1 %>
		style="background-color:green;"
	<% elsif user_likes[placeholder.medium_id] == -1 %>
		style="background-color:red;"
	<% elsif user_likes[placeholder.medium_id] == 0 %>
		style="background-color:yellow;"
	<% end %>	>
	Title: <%= link_to placeholder.title, movie_path(placeholder) %>
	<span class="icons_right"><%= render partial: 'layouts/icons', locals: { user: user, current_user_likes: current_user_likes, placeholder: placeholder, current_user: current_user } %></span>
	<br>
</div>