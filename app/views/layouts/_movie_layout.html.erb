<% if user_likes[placeholder.medium_id] == 1 %>
	<div id=<%="#{placeholder.id}"%> class="likes_row_movie" style="background-color: #BAC17B;">
		<div class="watched_movie_title">
			<%= link_to placeholder.title, movie_path(placeholder) %>
		</div>
		<div class="icons_right">
			<div class="icons_container">
				<%= render partial: 'layouts/icons', locals: { user: user, current_user_likes: current_user_likes, placeholder: placeholder, current_user: current_user } %>
			</div>
		</div>
		<div class="expanded_likes_movie">
			<%= placeholder.year %>  
			(<%= placeholder.rated %>)  
			<%= placeholder.runtime %>
			<br>
			<br>
			<%= placeholder.plot %>
			<br>
			<br>
			Tags: <% placeholder.medium.tags.each do |tag| %>
				<%= link_to tag.name,  tag_path(tag) %>
			<% end %>
			<br>
			Director: <%= placeholder.director %>
			<br>
			Writer: <%= placeholder.writer %>
			<br>
			Starring: <%= placeholder.actors %>
			<br>
			<div class="bar_mortice mortice_tiny" style="width: 266px">
			  <div class="progress progress_tiny green" style="width: <%= percents[0] %>%;"></div>
			  <div class="progress progress_tiny yellow" style="width: <%= percents[1] %>%;"></div>
			  <div class="progress progress_tiny red" style="width: <%= percents[2] %>%;"></div>
			</div>
			<img class="full_poster" src="<%= placeholder.poster %>">
			<br>
		</div>
	</div>
