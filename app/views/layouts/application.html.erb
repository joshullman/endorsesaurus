<!DOCTYPE html>
<html>
<head>
  <title>Endorsesaurus</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Amatic+SC:400,700' rel='stylesheet' type='text/css'>
</head>
<body>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<header class ="navbar">
  <div class ="navbar-class">
    <ul class="navbar-nav">
      <% if current_user %>
      <li>(<%= current_user.points %>)</li>
      <li><%= link_to "Home", dashboard_user_path(current_user) %>
        <ul>
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Friends", friends_user_path(current_user) %></li>
          <li><%= link_to "Movies", movies_user_path(current_user) %></li>
          <li><%= link_to "Shows", shows_user_path(current_user) %></li>
        </ul>
      </li>
    	<li><%= link_to "Media", media_path %></li>
      <li><%= link_to "Movies", movies_path %></li>
      <li><%= link_to "Shows", shows_path %></li>
      <li><%= link_to "Tags", tags_path %></li>
      <li>Settings
        <ul class="hmenu">
          <li><%= render 'devise/menu/registration_items' %></li>
          <li><%= render 'devise/menu/login_items' %></li>
        </ul>
      </li>
      <% end %>
    </ul>
  </div>
</header>

<%= yield %>

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '170206153377410',
      xfbml      : true,
      version    : 'v2.6'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

</body>
</html>
