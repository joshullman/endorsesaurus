<div class ="secondary-navbar-class">
  <ul class="secondary-navbar-nav">
  	<li><%= link_to "#{@user.name}'s Profile", @user %></li>
  	<li><%= link_to "#{@user.name}'s Friends", friends_user_path(@user) %></li>
  	<li><%= link_to "#{@user.name}'s Movies", movies_user_path(@user) %></li>
    <li><%= link_to "#{@user.name}'s Shows", shows_user_path(@user) %></li>
  </ul>
</div>
<div class ="endorsesaurus_container">
	<h2><%= @user.name %>'s Endorsesaurus Enclosure</h2>
</div>
<div class="left_col">
	<div class="photo"><%= image_tag 'profile.jpg' %></div>
	<div class=profile_info>
		<h2><%= @user.name %></h2>
		<h2>My Points: <%= @user.points %></h2>
	</div>
  <% if current_user != @user && current_user.pending_friends.include?(@user)%>
  	Friendship Pending...
	<% elsif current_user != @user && !current_user.friends.include?(@user) %>
    <%= link_to "Add Friend", friendships_path(:friend_id => @user), :method => :post %>
  <% end %>
</div>

<div class="two_thirds_col">

	<h3>Recent Activity:</h3>

	<div class="recent_activity_wrapper">
		<% @recent_activity.each_key do |record| %>
			<div id=<%="recent_activity_#{@recent_activity[record][0].id}"%> class="recent_activity_row"
				<% if !record[1].is_a? Integer %>
				<% elsif record[1] == 1 %>
					style="background-color:green;"
				<% elsif record[1] == -1 %>
					style="background-color:red;"
				<% elsif record[1] == 0 %>
					style="background-color:yellow;"
				<% end %>	>

				<% if record[0] == "Like"%>
					<% if record[1] == 1 %>
					  <% if @recent_activity[record][0].medium.media_type == "Movie" %>
							<%= "#{@user.name} liked the Movie "%><%= link_to @recent_activity[record][0].title, movie_path(record) %>
							<br>
							<%= @recent_activity[record][1].created_at %>
						<% else %>
							<%= "#{@user.name} liked the Show "%><%= link_to @recent_activity[record][0].title, show_path(@recent_activity[record][0].show) %><%=" Season #{@recent_activity[record][0].season_num}!" %>
							<br>
							<%= @recent_activity[record][1].created_at %>
						<% end %>
					<% elsif record[1] == 0 %>
					  <% if @recent_activity[record][0].medium.media_type == "Movie" %>
							<%= "#{@user.name} saw the Movie "%><%= link_to @recent_activity[record][0].title, movie_path(record) %>
							<br>
							<%= @recent_activity[record][1].created_at %>
						<% else %>
							<%= "#{@user.name} saw the Show "%><%= link_to @recent_activity[record][0].title, show_path(@recent_activity[record][0].show) %><%=" Season #{@recent_activity[record][0].season_num}!" %>
							<br>
							<%= @recent_activity[record][1].created_at %>
						<% end %>
					<% elsif record[1] == -1 %>
					  <% if @recent_activity[record][0].medium.media_type == "Movie" %>
							<%= "#{@user.name} disliked the Movie "%><%= link_to @recent_activity[record][0].title, movie_path(record) %>
							<br>
							<%= @recent_activity[record][1].created_at %>
						<% else %>
							<%= "#{@user.name} disliked the Show "%><%= link_to @recent_activity[record][0].title, show_path(@recent_activity[record][0].show) %><%=" Season #{@recent_activity[record][0].season_num}!" %>
							<br>
							<%= @recent_activity[record][1].created_at %>
						<% end %>
					<% end %>
				<% elsif record[0] == "R-To"%>
				 <% if @recent_activity[record][0].medium.media_type == "Movie" %>
						<%= "#{@user.name} Recommended the Movie "%><%= link_to @recent_activity[record][0].title, movie_path(@recent_activity[record][0]) %> to <%= link_to record[1].name, record[1] %>
						<%= @recent_activity[record][1].created_at %>
					<% else %>
						<%= "#{@user.name} Recommended the Show "%><%= link_to @recent_activity[record][0].title, show_path(@recent_activity[record][0].show) %><%=" Season #{@recent_activity[record][0].season_num} to "%><%= link_to record[1].name, record[1] %>
						<br>
						<%= @recent_activity[record][1].created_at %>
					<% end %>
				<% elsif record[0] == "R-From" %>
					<% if @recent_activity[record][0].medium.media_type == "Movie" %>
						<%= link_to record[1].name, record[1] %> Recommended the Movie <%= link_to @recent_activity[record][0].title, movie_path(@recent_activity[record][0]) %><%=" to #{@user.name}!" %>
						<br>
						<%= @recent_activity[record][1].created_at %>
					<% else %>
						<%= link_to record[1].name, record[1] %> Recommended the Show <%= link_to @recent_activity[record][0].title, show_path(@recent_activity[record][0].show) %><%=" Season #{@recent_activity[record][0].season_num} to #{@user.name}!" %>
						<br>
						<%= @recent_activity[record][1].created_at %>
					<% end %>
				<% end %>
				<br>
				<%= render partial: 'layouts/icons', locals: { current_user_likes: @current_user_likes, placeholder: @recent_activity[record][0], current_user: current_user } %>
			</div>
		<% end %>
	</div>
</div>


