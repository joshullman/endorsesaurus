<%= render partial: 'layouts/endorsesaurus_enclosure', locals: { current_user: current_user, user: @user } %>
<%= render partial: 'layouts/secondary_nav_bar', locals: { user: @user } %>

<div class="left_col">
</div>

<div>
	<h3 class="text_center"><%= @user.name%>'s recent activity:</h3>
	<ul class="friends_recents_list">
		<% @recent_activity.each do |notification| %>
			<div class="event_wrapper">
			<% if notification.notification_type == "friends" %>
				<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
				became friends with 
				<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %>
			</div>
			<br>

			<% elsif notification.media_type == "Movie" %>
				<% case notification.notification_type %>
					<% when "like" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							<span class="span_liked">liked</span> the movie 
							<%= render partial: 'layouts/movie_poster_icon', locals: { movie: notification.media } %>
						</div>
						<br>

					<% when "seen" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							<span class="span_seen">watched</span> the movie 
							<%= render partial: 'layouts/movie_poster_icon', locals: { movie: notification.media } %>
						</div>
						<br>

					<% when "dislike" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							<span class="span_disliked">disliked</span> the movie
							<%= render partial: 'layouts/movie_poster_icon', locals: { movie: notification.media } %>
						</div>
						<br>

					<% when "recommendation" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							<span class="span_recommended">recommended</span> the movie 
							<%= render partial: 'layouts/movie_poster_icon', locals: { movie: notification.media } %>
							to 
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %>
						</div>
						<br>

					<% when "liked rec" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %> 
							<span class="span_liked">liked</span> 
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							's movie recommendation 
							<%= render partial: 'layouts/movie_poster_icon', locals: { movie: notification.media } %>
						</div>
						<br>

					<% when "seen rec" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %> 
							<span class="span_seen">watched</span> 
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							's movie recommendation 
							<%= render partial: 'layouts/movie_poster_icon', locals: { movie: notification.media } %>
						</div>
						<br>

					<% when "disliked rec" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %> 
							<span class="span_disliked">disliked</span> 
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							's movie recommendation 
							<%= render partial: 'layouts/movie_poster_icon', locals: { movie: notification.media } %>
						</div>
						<br>

				<% end %>

			<% elsif notification.media_type == "Season" %>
				<% case notification.notification_type %>
					<% when "like" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %> 
							<span class="span_liked">liked</span> the show 
							<%= render partial: 'layouts/season_poster_icon', locals: { season: notification.media } %>
						</div>
						<br>

					<% when "seen" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %> 
							<span class="span_seen">watched</span> the show 
							<%= render partial: 'layouts/season_poster_icon', locals: { season: notification.media } %>
						</div>
						<br>

					<% when "dislike" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %> 
							<span class="span_disliked">disliked</span> the show 
							<%= render partial: 'layouts/season_poster_icon', locals: { season: notification.media } %>
						</div>
						<br>

					<% when "recommendation" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %> 
							<span class="span_recommended">recommended</span> the show 
							<%= render partial: 'layouts/season_poster_icon', locals: { season: notification.media } %>
							to 
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %>
						</div>
						<br>

					<% when "liked rec" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %> 
							<span class="span_liked">liked</span> 
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							's show recommendation 
							<%= render partial: 'layouts/season_poster_icon', locals: { season: notification.media } %>
						</div>
						<br>

					<% when "seen rec" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %> 
							<span class="span_seen">watched</span> 
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							's show recommendation 
							<%= render partial: 'layouts/season_poster_icon', locals: { season: notification.media } %>
						</div>
						<br>

					<% when "disliked rec" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_two } %>
							<span class="span_disliked">disliked</span> 
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %>
							's show recommendation 
							<%= render partial: 'layouts/season_poster_icon', locals: { season: notification.media } %>
						</div>
						<br>

				<% end %>
			<% elsif notification.media_type == "Episode" %>
				<% case notification.notification_type %>
					<% when "like" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %> 
							<span class="span_liked">liked</span>
							<%= render partial: 'layouts/episode_poster_icon', locals: { episode: notification.media } %>
						</div>
						<br>

					<% when "seen" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %> 
							<span class="span_seen">watched</span> 
							<%= render partial: 'layouts/episode_poster_icon', locals: { episode: notification.media } %>
						</div>
						<br>

					<% when "dislike" %>
						<div class="event_wrapper">
							<%= render partial: 'layouts/friend_icon', locals: { user: notification.user_one } %> 
							<span class="span_disliked">disliked</span> 
							<%= render partial: 'layouts/episode_poster_icon', locals: { episode: notification.media } %>
						</div>
						<br>

				<% end %>
			<% end %>
		<% end %>
	</ul>
</div>