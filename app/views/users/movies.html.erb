<%= render partial: 'layouts/endorsesaurus_enclosure', locals: { current_user: current_user, user: @user } %>
<%= render partial: 'layouts/secondary_nav_bar', locals: { user: @user } %>

<div class="left_col">
	<h3 class="text_center">Recent Movie Activity:</h3>
	<div class="recent_wrapper">
		<% @recently_watched.each_key do |like| %>
			<%= render partial: 'layouts/movie_layout', locals: { recently_watched: @recently_watched, user: @user, user_likes: @user_likes, current_user_likes: @current_user_likes, placeholder: like, current_user: current_user, recent: true, css_class: "recent"} %>	
			<br>
		<% end %>
	</div>
</div>

<div class="center_col">
	<h3 class="text_center">Movie Recommendations:</h3>
	<div class="recommendation_wrapper">
		<% @recs.each do |rec| %>
			<%= render partial: 'layouts/recommended_movie_layout', locals: { user: @user, current_user_likes: @current_user_likes, rec: rec, current_user: current_user, css_class: "recommendation" } %>
			<br>
		<% end %>
	</div>
</div>


<div class="right_col">
	<h3>
	<span class="likes_button">Likes</span> 
	<span class="seen_button">Seen</span> 
	<span class="dislikes_button">Dislikes</span>
	</h3>
	<div class="watched_wrapper">

		<div class="likes_wrapper">
			<% if @likes[1] %>
				<% @likes[1].each do |like| %>
					<%= render partial: 'layouts/movie_layout', locals: { recently_watched: @recently_watched, user: @user, user_likes: @user_likes, current_user_likes: @current_user_likes, placeholder: like, current_user: current_user, recent: false, css_class: "like"} %>	
					<br>
				<% end %>
			<% end %>
		</div>

		<div class="seen_wrapper">
			<% if @likes[0] %>
				<% @likes[0].each do |seen| %>
					<%= render partial: 'layouts/movie_layout', locals: { recently_watched: @recently_watched, user: @user, user_likes: @user_likes, current_user_likes: @current_user_likes, placeholder: seen, current_user: current_user, recent: false, css_class: "seen"} %>	
					<br>
				<% end %>
			<% end %>
		</div>

		<div class="dislikes_wrapper">
			<% if @likes[-1] %>
				<% @likes[-1].each do |dislike| %>
					<%= render partial: 'layouts/movie_layout', locals: { recently_watched: @recently_watched, user: @user, user_likes: @user_likes, current_user_likes: @current_user_likes, placeholder: dislike, current_user: current_user, recent: false, css_class: "dislike"} %>	
					<br>
				<% end %>
			<% end %>
		</div>
	</div>
</div>