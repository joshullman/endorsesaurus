<%= render partial: 'layouts/endorsesaurus_enclosure', locals: { current_user: current_user, user: @user } %>
<%= render partial: 'layouts/secondary_nav_bar', locals: { user: @user } %>

<div class="recommendations_container">
	<h3 class="text_center">Movie Recommendations:</h3>
	<div class="recommendation_wrapper">
		<% if @movie_recs && !@movie_recs.empty? %>
			<% @movie_recs.each do |rec| %>
				<%= render partial: 'layouts/recommended_movie_layout', locals: { user: @user, current_user_likes: @current_user_likes, rec: rec, current_user: current_user, percents: @percents[rec.info.medium_id]} %>
				<br>
			<% end %>
		<% else %>
			<p>No Recommendations to show!</p>
		<% end %>
	</div>
</div>


<div class="likes_container">
	<h3>
	<span class="likes_button">Likes</span> 
	<span class="seen_button">Seen</span> 
	<span class="dislikes_button">Dislikes</span>
	</h3>
	<div class="watched_wrapper">

		<div class="likes_wrapper">
			<% if @likes && !@likes.empty? %>
				<% @likes.each do |like| %>
					<%= render partial: 'layouts/movie_layout', locals: { recently_watched: @recently_watched, user: @user, user_likes: @user_likes, current_user_likes: @current_user_likes, placeholder: like, current_user: current_user, recent: false} %>	
					<br>
				<% end %>
			<% else %>
				<p>No likes to show!</p>
			<% end %>
		</div>

		<div class="seen_wrapper">
			<% if @seens && !@seens.empty? %>
				<% @seens.each do |seen| %>
					<%= render partial: 'layouts/movie_layout', locals: { recently_watched: @recently_watched, user: @user, user_likes: @user_likes, current_user_likes: @current_user_likes, placeholder: seen, current_user: current_user, recent: false} %>	
					<br>
				<% end %>
			<% else %>
				<p>No seens to show!</p>
			<% end %>
		</div>

		<div class="dislikes_wrapper">
			<% if @dislikes && !@dislikes.empty? %>
				<% @dislikes.each do |dislike| %>
					<%= render partial: 'layouts/movie_layout', locals: { recently_watched: @recently_watched, user: @user, user_likes: @user_likes, current_user_likes: @current_user_likes, placeholder: dislike, current_user: current_user, recent: false} %>	
					<br>
				<% end %>
			<% else %>
				<p>No dislikes to show!</p>
			<% end %>
		</div>
	</div>
</div>