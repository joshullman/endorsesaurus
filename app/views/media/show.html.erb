<h1><%= @medium.title %></h1>
<% if @medium.media_type == "series" %>
	<h3>Season: <%= @medium.season %></h3>
<% end %>

<div id=<%="media_#{@medium.id}"%> class="media_row">
	<% case @current_user_likes[@medium] %>
		<% when 1 %>
			<div class="icons"><%= image_tag 'green_circle.svg' %></div>
		<% when 0 %>
			<div class="icons"><%= image_tag 'yellow_circle.png' %></div>
		<% when -1 %>
			<div class="icons"><%= image_tag 'red_circle.png' %></div>
		<% else %>
			<div class="icons"><%= image_tag 'white_circle.jpeg' %></div>
	<% end %>
	<div class="icons"><%= image_tag 'blue_r.jpg' %></div>
	<br>
	Year: <%= @medium.year %>
	<br>
	Rated: <%= @medium.rated %>
	<br>
	Released: <%= @medium.released %>
	<br>
	Runtime: <%= @medium.runtime %>
	<br>
	Genre: <%= @medium.genre %>
	<br>
	<% if @medium.media_type == "series" %>
		Creator: <%= @medium.writer %>
		<br>
	<% else %>
		Director: <%= @medium.director %>
		<br>
		Writer: <%= @medium.writer %>
		<br>
	<% end %>
	Actors: <%= @medium.actors %>
	<br>
	Plot: <%= @medium.plot %>
	<br>
	Poster: 
	<br>
	<img src="<%= @medium.poster %>">
	<br>
	Number of people who have watched this media: <%= @medium.watched_count %>
	<br>
	Number of people who like this media: <%= @medium.liked_count %>
	<br>
	Number of people who meh this media: <%= @medium.seen_count %>
	<br>
	Number of people who dislike this media: <%= @medium.disliked_count %>
	<br>
	Number of people who have recommended this media: <%= @medium.recommended_count %>
	<br>
	You have recommended this to:
	<br>
	<% @medium.recommended_to(current_user.id).each do |person| %>
		<%= person.email %>
	<% end %>
	<br>
	Has recommended this to you:
	<br>
	<% @medium.recommended_by(current_user.id).each do |person| %>
		<%= person.email %>
	<% end %>
	<br>
</div>