			<br>
		<% end %>
	<% end %>
	<% if @likes[-1] %>
		<h3>Dislikes:</h3>
		<% @likes[-1].each do |dislike| %>
			<div id=<%="#{dislike.id}"%> class="dislike_row">
				Title: <%= dislike.title %>
				<br>
				<% if dislike.media_type == "series" %>
					Season: <%= dislike.season %>
					<br>
				<% end %>
				Year: <%= dislike.year %>
				<br>
				Rated: <%= dislike.rated %>
				<br>
				Released: <%= dislike.released %>
				<br>
