				<% else %>
					Director: <%= dislike.director %>
					<br>
					Writer: <%= dislike.writer %>
					<br>
				<% end %>
				Actors: <%= dislike.actors %>
				<br>
				Plot: <%= dislike.plot %>
				<br>
				Awards: <%= dislike.awards %>
				<br>
				Poster:
				<br>
				<img src="<%= dislike.poster %>">
				<br>
			</div>
			<br>
		<% end %>
	<% end %>
</div>