<h1 class="text_center">All Shows</h1>

<div class="shows_index_wrapper">
	<% @tags.each_key do |tag| %>
		<div class="shows_index_tag_wrapper">
		<h3 class="text_center"><%= tag.name %></h3>
		<% @tags[tag].each do |show| %>
			<%= render partial: 'layouts/media_show_layout', locals: { current_user_likes: @current_user_likes, placeholder: show, current_user: current_user } %>
		<% end %>
		<br>
		</div>
	<% end %>
</div>